{
  "name": "momonga_blog_front",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:admin": "turbo run build --filter=admin",
    "build:public": "turbo run build --filter=public",
    "dev": "turbo dev",
    "dev:admin": "turbo run dev --filter=admin",
    "dev:public": "turbo run dev --filter=public",
    "lint": "turbo lint",
    "lint:admin": "turbo run lint --filter=admin",
    "lint:public": "turbo run lint --filter=public",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.1.3",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "@hey-api/client-fetch": "^0.4.0",
    "@hey-api/openapi-ts": "^0.53.8",
    "@hookform/resolvers": "^3.9.0",
    "react-hook-form": "^7.53.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  }
}
